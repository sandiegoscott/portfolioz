%h1 Listing trades

%table
  %thead
    %tr
      %th Type
      %th Subtype
      %th Investment
      %th Account
      %th Holding
      %th Ddate
      %th Shares
      %th Price
      %th Commission
      %th Amount
      %th Cash delta
      %th Shares delta
      %th Shares before
      %th Shares after
      %th Note
      %th
      %th
      %th
      
  %tbody
    - @trades.each do |trade|
      %tr
        %td= trade.type
        %td= trade.subtype
        %td= trade.investment
        %td= trade.account
        %td= trade.holding
        %td= trade.ddate
        %td= trade.shares
        %td= trade.price
        %td= trade.commission
        %td= trade.amount
        %td= trade.cash_delta
        %td= trade.shares_delta
        %td= trade.shares_before
        %td= trade.shares_after
        %td= trade.note
        %td= link_to 'Show', trade
        %td= link_to 'Edit', edit_trade_path(trade)
        %td= link_to 'Destroy', trade, :method => :delete, :data => { :confirm => 'Are you sure?' }

